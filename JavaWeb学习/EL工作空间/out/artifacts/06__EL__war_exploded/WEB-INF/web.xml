<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>UserAddServlet</servlet-name>
        <servlet-class>com.mystudy.controller.UserAddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserFindServlet</servlet-name>
        <servlet-class>com.mystudy.controller.UserFindServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserDeleteServlet</servlet-name>
        <servlet-class>com.mystudy.controller.UserDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.mystudy.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionAddServlet</servlet-name>
        <servlet-class>com.mystudy.controller.QuestionAddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionFindServlet</servlet-name>
        <servlet-class>com.mystudy.controller.QuestionFindServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionDeleteServlet</servlet-name>
        <servlet-class>com.mystudy.controller.QuestionDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionUpdateServlet</servlet-name>
        <servlet-class>com.mystudy.controller.QuestionUpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionSelectServlet</servlet-name>
        <servlet-class>com.mystudy.controller.QuestionSelectServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionRandServlet</servlet-name>
        <servlet-class>com.mystudy.controller.QuestionExamServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionScoreServlet</servlet-name>
        <servlet-class>com.mystudy.controller.QuestionScoreServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuestionScoreServlet</servlet-name>
        <url-pattern>/score</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionRandServlet</servlet-name>
        <url-pattern>/question/rand</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionSelectServlet</servlet-name>
        <url-pattern>/question/select</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionUpdateServlet</servlet-name>
        <url-pattern>/question/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionDeleteServlet</servlet-name>
        <url-pattern>/question/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionFindServlet</servlet-name>
        <url-pattern>/question/find</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionAddServlet</servlet-name>
        <url-pattern>/question/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserDeleteServlet</servlet-name>
        <url-pattern>/user/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserFindServlet</servlet-name>
        <url-pattern>/user/find</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserAddServlet</servlet-name>
        <url-pattern>/user/add</url-pattern>
    </servlet-mapping>
    
    <!--自定义默认欢迎资源文件规则-->
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
        <!--servlet作为默认欢迎资源时，开头斜线必须去掉-->
        <welcome-file>user/add</welcome-file>
    </welcome-file-list>
    <!--注册监听器接口实现类-->
    <listener>
        <listener-class>com.mystudy.listenter.OneListenter</listener-class>
    </listener>
    <filter>
        <filter-name>oneFilter</filter-name>
        <filter-class>com.mystudy.filter.OneFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>oneFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>