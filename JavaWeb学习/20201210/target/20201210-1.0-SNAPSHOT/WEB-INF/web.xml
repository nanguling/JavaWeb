<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>MessageListServlet</servlet-name>
        <servlet-class>com.mystudy.controller.MessageListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostMessageServlet</servlet-name>
        <servlet-class>com.mystudy.controller.PostMessageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostFileServlet</servlet-name>
        <servlet-class>com.mystudy.controller.PostFileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PostFileServlet</servlet-name>
        <url-pattern>/postfile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostMessageServlet</servlet-name>
        <url-pattern>/postmessage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MessageListServlet</servlet-name>
        <url-pattern>/message_list</url-pattern>
    </servlet-mapping>
</web-app>